            app:layout_constraintStart_toStartOf="@+id/gl_item_color_left"
            app:layout_constraintTop_toTopOf="@+id/gl_item_color_card"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/tv_color_card1"
